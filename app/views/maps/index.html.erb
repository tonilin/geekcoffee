<div class="map-container">
  <div class="map-sidebar">
    <button type="button" class="close">&times;</button>
    <div class="shop-detail"></div>

  </div>
  <div class="map shop-map"></div>
</div>


<script id="shop-detail-template" type="text/x-handlebars-template">
  <h3><%= fa_icon("coffee") %> {{name}}</h3>
  <div class="address">{{address}}</div>

  <dl class="dl-horizontal">

    {{#if hours}}
      <dt class="hours"><%= fa_icon("clock-o") %> 營業時間</dt>
      <dd>{{hours}}</dd>
    {{/if}}


    <dt class="is-wifi-free"><%= fa_icon("signal") %> 免費 wifi</dt>
    <dd>
      {{#if is_wifi_free}}
        有
      {{else}}
        無
      {{/if}}
    </dd>


    <dt class="is-wifi-free"><%= fa_icon("bolt") %> 有無插座</dt>
    <dd>
      {{#if power_outlets}}
        有
      {{else}}
        無
      {{/if}}
    </dd>

    {{#if description}}
      <dt class="hours">描述</dt>
      <dd>{{description}}</dd>
    {{/if}}

  </dl>

</script>